<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nivelle.guide.springboot.mapper.SysRoleMapper">

    <resultMap id="BaseResultMap" type="com.nivelle.guide.springboot.entity.SysRoleEntity">
        <id column="id" property="id"/>
        <result column="available" property="available"/>
        <result column="description" property="description"/>
        <result column="role" property="role"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <collection property="permissions" ofType="com.nivelle.guide.springboot.entity.SysPermissionEntity">
            <result column="available" property="available"/>
            <result column="name" property="name"/>
            <result column="parent_id" property="parentId"/>
            <result column="parent_ids" property="parentIds"/>
            <result column="resource_type" property="resourceType"/>
            <result column="url" property="url"/>
            <result column="create_time" property="createTime"/>
            <result column="update_time" property="updateTime"/>
        </collection>
        <collection property="userInfos" ofType="com.nivelle.guide.springboot.entity.UserInfoEntity">
            <id column="uid" property="uid"/>
            <result column="username" property="username"/>
            <result column="name" property="name"/>
            <result column="password" property="password"/>
            <result column="salt" property="salt"/>
            <result column="state" property="state"/>
        </collection>
    </resultMap>


</mapper>